<div class="mt-4">
    <form method="POST" action="/search">
        <div class="form-group">
            <label for="search-input">Enter key:</label>
            <input type="text" class="form-control" id="search-input" name="q" placeholder="Your key...">
            <label for="gender-input">Gioi tinh:</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">---Chon gioi tinh---</option>
                <option value="male">Nam</option>
                <option value="female">Nu</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>